<style is:global>
	@font-face {
		font-family: "Comic Sans MS";
		src: url("/fonts/comic-sans.woff") format("woff");
	}

	body {
		display: flex;
		justify-content: center;
		font-family: "Comic Sans MS";
		background: url("/images/bg.webp");
		background-size: 150px 150px;
		background-repeat: repeat;
		animation: bg-anim 300s infinite linear;
		height: 100vh;
		overflow-y: hidden;
		overflow-x: hidden;
	}

	aside {
		position: absolute;
		top: 0px;
		width: 85%;
		display: flex;
		justify-content: end;
	}

	main {
		width: 85%;
		margin: 19.9px;
	}

	div iframe {
		width: 100%;
		height: 75vh;
		border: 3px solid black;
		background: rgba(255, 255, 255, 0.7);
		backdrop-filter: blur(3px);
	}

	section {
		display: flex;
		flex-direction: row;
	}

	section ul {
		display: flex;
		flex-direction: row;
		gap: 50px;
		list-style: none;
		align-items: end;
		margin: 0px;
	}

	img {
		height: 100px;
		border: 3px solid black;
		margin-bottom: 5px;
	}

	button {
		background: rgba(255, 255, 255, 0.7);
		font-family: "Comic Sans MS";
		color: #000;
		backdrop-filter: blur(5px);
		padding: 10px 50px;
		height: 30px;
		width: fit-content;
		display: flex;
		text-align: center;
		align-items: center;
		border: 3px solid black;
		border-bottom: none;
		cursor: pointer;
	}

	button:hover {
		background: rgba(219, 219, 219, 0.7);
	}

	button:active {
		background: rgba(89, 89, 89, 0.7);
		color: white;
	}

	.buttonon {
		background: rgba(69, 69, 69, 0.7);
		color: white;
	}
	.buttonon:hover {
		background: rgba(0, 0, 0, 0.7);
		color: white;
	}

	.none{
		display: none;
	}

	@keyframes bg-anim {
		0% {
			background-position: 0% 0%;
		}
		50% {
			background-position: 50% 50%;
		}
		100% {
			background-position: 100% 100%;
		}
	}

	@media (max-width: 1042px) {
		section ul {
			gap: 25px;
		}
	}

	@media (max-width: 954px) {
		section ul {
			gap: 10px;
			padding-left: 20px;
		}
	}

	@media (max-width: 877px) {
		section ul {
			display: none;
		}

		aside {
			display: none;
		}
	}
</style>
